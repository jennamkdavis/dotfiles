#!/bin/sh
echo 'Running rcm post-up hook'

if [ "$(uname)" == "Darwin" ]; then
  $DOT_PATH/configs/osx/bin/postinstall
elif [ "$(expr substr $(uname -s) 1 5)" == "Linux" ]; then
  $DOT_PATH/configs/nix/bin/install
fi

$DOT_PATH/configs/bash/bin/install
# NB: causes cli to freeze up
~/.vim/bin/install
