#!/bin/bash
echo 'Running rcm post-up hook'

if [ "$(uname)" == "Darwin" ]; then
    if [ -f ~/.duti ]; then
      duti ~/.duti
    fi

    # use homebrew-installed shell
    LINE='/usr/local/bin/zsh'
    FILE=/etc/shells
    sudo grep -qF "$LINE" "$FILE" || sudo bash -c 'echo "$LINE" > $FILE'
    sudo chsh -s $LINE $USER
elif [ "$(expr substr $(uname -s) 1 5)" == "Linux" ]; then
    wget --quiet --output-document - https://raw.githubusercontent.com/rupa/z/master/z.sh >> ~/.shrc.local
fi

# NB: causes cli to freeze up
~/.vim/bin/install
